@model EmployeeManagement.ViewModel.HomeDetailsViewModel
@{

    ViewBag.Title = "Employee details";

    var photopath = "~/images/" + (Model.employees.PhotoPath ?? "images.png");
}
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h2>@Model.employees.Name</h2>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail"  height="212" width="30" src="@photopath" asp-append-version="true" />

                    <h4>Employee ID : @Model.employees.Id</h4>
                    <h4>Email : @Model.employees.Email</h4>
                    <h4>Department : @Model.employees.Department</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.employees.Id" class="btn btn-primary m-1">Edit</a>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.employees.Id" class="btn btn-danger m-1">Delete</a>                
                </div>
            </div>
        </div>
    </div>
@model IEnumerable<EmployeeManagement.Models.Employees>
@{
    ViewBag.Title = "Employee List";
}
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photopath = "~/images/" + (employee.PhotoPath ?? "images.png");
        <div class="card m-3" style="min-width: 18rem; max-width:35.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a href="/home/details/@employee.Id" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
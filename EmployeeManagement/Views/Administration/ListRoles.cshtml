@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles List";
}
<h3>All Roles</h3>
<div class="card">

    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">
      Create New Role</a>
    @if (Model.Any())
    {
    @foreach (var roles in Model)
    {
<div class="card mb-3">
    <div class="card-header">
        <h2>Role ID:   @roles.Id</h2>
    </div>
    <div class="card-body">
        <h3 class="card-title">@roles.Name</h3>

    </div>
    <div class="card-footer text-center">
        <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roles.Id" class="btn btn-primary m-1">Edit</a>
        <a asp-action="DeleteRole" asp-controller="Administration" class="btn btn-danger m-1">Delete</a>
    </div>
</div>
    }
    }
    else
    {
        <div> No record...!</div>
    }
</div>
